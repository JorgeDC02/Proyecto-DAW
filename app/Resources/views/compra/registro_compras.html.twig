{% extends ':index/empleado:index.html.twig' %}

{% block div %}
    <div class="table-responsive">
        <table class="table table-hover" style="text-align: center;">
            <thead>
            <tr>
                <th>Id</th><th>Referencia</th><th>Producto</th><th>Marca</th><th>Modelo</th>
                <th>Precio</th><th>Departamento</th><th>Novedad</th><th>Imagen</th>
                <th>Fecha inserccion</th>

            </tr>
            </thead>
            <tbody>
            {% for producto in productos %}

                <tr>
                    <td>{{ producto.id }}</td>
                    <td>{{ producto.ref }}</td>
                    <td>{{ producto.tipoProducto }}</td>
                    <td>{{ producto.nMarca }}</td>
                    <td>{{ producto.modelo }}</td>
                    <td>{{ producto.precio }}</td>
                    <td>{{ producto.nombre }}</td>
                    <td>{{ producto.novedad }}</td>
                    <td><img src="images/upload/{{ producto.imageName }}" width="100px"></td>
                    <td>{{ producto.createdAt | date("d/m/Y H:i:s")}}</td>


                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}